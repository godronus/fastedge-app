{
  "name": "FastEdge Application Dev Environment",
  "image": "ghcr.io/godronus/fastedge-app/devcontainer:latest",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest",
      "profile": "minimal"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false,
      "username": "vscode"
    }
  },

  "onCreateCommand": "bash .devcontainer/setup.sh",
  "postCreateCommand": "code --install-extension ${containerWorkspaceFolder}/.devcontainer/fastedge-0.1.0.vsix",
  "updateContentCommand": "cd my-fastedge-app && npm install",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "clippy",
        "rust-analyzer.cargo.target": "wasm32-wasip1",
        "editor.formatOnSave": true,
        "mcp.servers": {
          // "fastedge": {
          //   "command": "npx",
          //   "args": ["@your-company/fastedge-mcp"]
          // }
        }
      }
    }
  },

  "remoteUser": "vscode",

  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Preview",
      "onAutoForward": "openBrowser"
    }
  }
}
