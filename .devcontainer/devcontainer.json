{
  "name": "FastEdge Application Dev Environment",

  // Use pre-built image from GitHub Actions for instant startup
  "image": "ghcr.io/godronus/fastedge-app/devcontainer:latest",

  // Install extension after container is created (lightweight, ~2 seconds)
  "postCreateCommand": "code --install-extension ${containerWorkspaceFolder}/.devcontainer/fastedge-0.1.0.vsix",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "clippy",
        "rust-analyzer.cargo.target": "wasm32-wasip1",
        "editor.formatOnSave": true,
        "mcp.servers": {
          // "fastedge": {
          //   "command": "npx",
          //   "args": ["@your-company/fastedge-mcp"]
          // }
        }
      }
    }
  },

  "remoteUser": "vscode",

  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Preview",
      "onAutoForward": "openBrowser"
    }
  }
}
